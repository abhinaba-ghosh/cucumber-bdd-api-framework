{
    "extends": ["tslint:latest", "tslint-plugin-prettier", "tslint-config-prettier", "tslint-no-unused-expression-chai"],
    "rules": {
        "interface-name": false,
        "max-line-length": [true, 250],
        "member-access": false,
        "object-literal-sort-keys": [false],
        "ordered-imports": [false],
        "no-submodule-imports": [true, "test", "src", "config", "ts-node/register", "tsconfig-paths/register"],
        "no-implicit-dependencies": [true, ["test", "src", "config", "ts-node/register", "tsconfig-paths/register"]],
        "prettier": true,
        "no-var-requires": false,
        "variable-name": {
            "options": ["ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
        }
    }
}